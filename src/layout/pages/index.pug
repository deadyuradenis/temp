extends /layout/main.pug

block title
    title Главная

block body
    +header()

    main.main 
        section.s-intro 
            picture.s-intro__bg
                img(src="../../assets/media/intro.jpg", alt="")

            .container 
                .s-intro__inner 
                    h1.h1.s-intro__title #[span Lorem ipsum] dolor sit ametconsectetur #[span adipiscing] 
